
{
	"version": "2.0.0",
	"tasks": [
		{
			"args": [
				"backend/app.py"
			],
			"command": "python",
			"group": "none",
			"isBackground": true,
			"label": "Run Backend API (Flask)",
			"problemMatcher": [
				"$tsc"
			],
			"type": "shell"
		},
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "node",
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/frontend/Dockerfile",
				"context": "${workspaceFolder}/frontend",
				"pull": true
			},
			"node": {
				"package": "${workspaceFolder}/frontend/package.json"
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: release",
			"dependsOn": [
				"docker-build"
			],
			"platform": "node",
			"node": {
				"package": "${workspaceFolder}/frontend/package.json"
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"env": {
					"DEBUG": "*",
					"NODE_ENV": "development"
				}
			},
			"node": {
				"package": "${workspaceFolder}/frontend/package.json",
				"enableDebugging": true
			}
		}
	]
}